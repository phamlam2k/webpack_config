{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["/public/*"],
      "@modules/*": ["/src/modules/*"],
      "@common/*": ["/src/common/*"]
    }
  },
  "files": ["src/index.tsx"],
  "include": [
    "svg.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/*.svg"
  ],
  "exclude": ["node_modules"]
}
